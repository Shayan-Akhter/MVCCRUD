@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<center><h1>Student Details</h1></center>
<hr/>
<table class="table table-bordered table-striped">
    <tr>
        <td>Student Id</td>
        <td>Student Name</td>
        <td>Student Age</td>
        <td>Student Class</td>
        <td>Action</td>

        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>@Model.Rows[i][0]</td>
                <td>@Model.Rows[i][1]</td>
                <td>@Model.Rows[i][2]</td>
                <td>@Model.Rows[i][3]</td>
                <td>
                    <a href="@Url.Action("Edit", "Student", new { @id = @Model.Rows[i][0] })">Edit</a>
                    <a href="@Url.Action("Delete", "Student", new { @id = @Model.Rows[i][0] })">Delete</a>
                </td>
            </tr>
        }
    </tr>
</table>

<a href="@Url.Action("create", "Student")">Add Student</a>
